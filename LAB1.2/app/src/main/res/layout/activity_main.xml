<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    //LinearLayout include TableLayout and RelativeLayout
    //Tablelayout make TableRow
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp">

        <TableRow>
            <TextView android:text="Name" />
            <EditText
                android:id="@+id/editText"
                android:layout_width="350dp"
                android:hint="type your name" />
        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        //Print button make text appear
        <Button
            android:id="@+id/btn_print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="22dp"
            android:layout_toEndOf="@+id/btn_clear"
            android:layout_toRightOf="@+id/btn_clear"
            android:onClick="printClicked"
            android:text="PRINT" />

        //Clear button make text disappear
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="clearClicked"
            android:text="CLEAR" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn_print"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="11dp"
            android:text="contents" />
    </RelativeLayout>
</LinearLayout>
